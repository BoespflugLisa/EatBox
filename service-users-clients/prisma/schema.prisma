datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Clients {
  id            Int     @id @default(autoincrement())
  Lastname      String
  Firstname     String

  Address       Json?
  Phone         String?

  fk_user   Int    @unique
  user      Users  @relation(fields: [fk_user], references: [id])
}

model Users {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  Password    String
  fk_role     Int
  clients Clients[]

}




