datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Roles {
  id        Int     @id @default(autoincrement())
  title     String
  user Users[]
}

model Clients {
  id            Int     @id @default(autoincrement())
  user          Users   @relation(fields: [fk_user], references: [id])
  fk_user       Int
  Lastname      String
  Firstname     String

  Address       Json?
  Phone         String?
}

model Livreurs {
  id            Int     @id @default(autoincrement())
  user          Users   @relation(fields: [fk_user], references: [id])
  fk_user       Int
  Lastname      String
  Firstname     String
  Phone         String
  ProfileImg    String?
  Open_to_work  Boolean
  Free          Boolean

  AccountName   String?
  IBAN          String?
}

model Restaurants {
  id            Int     @id @default(autoincrement())
  user          Users   @relation(fields: [fk_user], references: [id])
  fk_user       Int
  Name          String

  Phone         String?
  IBAN          String?
  Address       Json?
  hours         Json?
  Type          String?
  CoverImg      String?
  Legal         Json? //IBAN AccountName
  Preferences   Json?
  Sponsors      Json?
}

model Developers {
  id            Int     @id @default(autoincrement())
  user          Users   @relation(fields: [fk_user], references: [id])
  fk_user       Int

  Lastname      String
  Firstname     String
}

model Token {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  valid      Boolean   @default(true)
  expiration DateTime

  // Relation fields
  user   Users @relation(fields: [userId], references: [id])
  userId Int
}

model Users {
  id    Int     @id @default(autoincrement())
  email String  @unique
  tokens Token[]
  Password  String
  role Roles @relation(fields: [fk_role], references: [id])
  fk_role Int
  developers Developers[]
  clients Clients[]
  deliverymen Livreurs[]
  restaurants Restaurants[]
}

model Components {
  id Int @id @default(autoincrement())
  name String
  downloads Int
}

model Services {
  id Int @id @default(autoincrement())
  name String
  IP String
  Description String
  Port Int
  URL String
  Type String
}

